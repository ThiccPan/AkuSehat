<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="9dp"
    android:paddingBottom="14dp"
    android:id="@+id/layout_imunisasi">


    <ImageView
        android:id="@+id/icon_list_imun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_max="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="42dp"
        app:srcCompat="@drawable/logo_daftar_imun"
        android:layout_marginStart="28dp"/>

    <TextView
        android:id="@+id/nama_vaksin_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nama vaksin"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/icon_list_imun"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nama_anak_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="@string/nama_anak"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/icon_list_imun"
        app:layout_constraintTop_toBottomOf="@+id/nama_vaksin_card" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="16dp"
        app:srcCompat="@drawable/list_imun_arrow"
        android:layout_marginEnd="28dp"/>

    <TextView
        android:id="@+id/waktu_vaksin_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="waktu vaksin"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@color/neutral_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_list_imun" />

</androidx.constraintlayout.widget.ConstraintLayout>